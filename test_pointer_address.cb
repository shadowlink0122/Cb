// アドレス演算子と間接参照のテスト

int main() {
    int value = 42;
    int* ptr = &value;  // アドレス演算子
    
    println("value: %d", value);
    println("*ptr: %d", *ptr);  // 間接参照
    
    *ptr = 100;  // ポインタ経由で値を変更
    
    println("After *ptr = 100:");
    println("value: %d", value);
    println("*ptr: %d", *ptr);
    
    return 0;
}
