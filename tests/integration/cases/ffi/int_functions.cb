// Test: FFI integer functions
// Purpose: Test integer return values from FFI

use foreign.c {
    int abs(int x);
}

void main() {
    // Test 1: abs of positive number
    int result1 = c.abs(42);
    if (result1 == 42) {
        println("Test 1: abs positive - PASSED");
    }
    
    // Test 2: abs of negative number
    int result2 = c.abs(-42);
    if (result2 == 42) {
        println("Test 2: abs negative - PASSED");
    }
    
    // Test 3: abs of zero
    int result3 = c.abs(0);
    if (result3 == 0) {
        println("Test 3: abs zero - PASSED");
    }
    
    // Test 4: abs of large number
    int result4 = c.abs(-1000000);
    if (result4 == 1000000) {
        println("Test 4: abs large - PASSED");
    }
}
