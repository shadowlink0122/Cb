// ビット演算子の基本テスト
main() {
    println("Bitwise operations test:");
    int a, b, result;
    
    // ビット AND
    a = 12;  // 1100
    b = 10;  // 1010
    result = a & b;  // 1000 = 8
    print("12 & 10: "); println(result);
    
    // ビット OR
    a = 12;  // 1100
    b = 10;  // 1010
    result = a | b;  // 1110 = 14
    print("12 | 10: "); println(result);
    
    // ビット XOR
    a = 12;  // 1100
    b = 10;  // 1010
    result = a ^ b;  // 0110 = 6
    print("12 ^ 10: "); println(result);
    
    // ビット NOT
    a = 5;   // ...00000101
    result = ~a;  // ...11111010 = -6 (2の補数表現)
    print("~5: "); println(result);
    
    // 左シフト
    a = 5;   // 101
    result = a << 2;  // 10100 = 20
    print("5 << 2: "); println(result);
    
    // 右シフト
    a = 20;  // 10100
    result = a >> 2;  // 101 = 5
    print("20 >> 2: "); println(result);
    
    println("Bitwise operations test passed");
}
