// 関数の引数と戻り値でのfloat/double/unsigned
float add_floats(float a, float b) {
    return a + b;
}

double multiply_doubles(double a, double b) {
    return a * b;
}

unsigned int bitwise_and(unsigned int a, unsigned int b) {
    return a & b;
}

float compute_average(float a, float b, float c) {
    return (a + b + c) / 3.0f;
}

double divide_precise(double numerator, double denominator) {
    return numerator / denominator;
}

int main() {
    // Float関数
    float f1 = add_floats(1.5f, 2.5f);
    println(f1);  // 4.0
    
    float avg = compute_average(1.0f, 2.0f, 3.0f);
    println(avg);  // 2.0
    
    // Double関数
    double d1 = multiply_doubles(3.14, 2.0);
    println(d1);  // 6.28
    
    double div = divide_precise(1.0, 3.0);
    println(div);  // 0.333333...
    
    double precision_test = divide_precise(10.0, 3.0) * 3.0;
    println(precision_test);  // 9.999999...
    
    // Unsigned関数
    unsigned int u1 = bitwise_and(255, 15);
    println(u1);  // 15
    
    return 0;
}
