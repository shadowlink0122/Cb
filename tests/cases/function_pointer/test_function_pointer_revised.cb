// 関数ポインタの基本テスト（改訂版）
// 形式1: (*ptr)(args) と 形式2: ptr(args) の両方をテスト

int add(int a, int b) {
    return a + b;
}

int multiply(int a, int b) {
    return a * b;
}

void main() {
    // 関数ポインタ変数の宣言と初期化
    int* funcPtr = &add;
    
    // 形式1: 明示的なデリファレンス (*ptr)(args)
    int result1 = (*funcPtr)(5, 3);
    println(result1);  // 期待値: 8
    
    // 形式2: 暗黙的な呼び出し ptr(args)
    int result2 = funcPtr(5, 3);
    println(result2);  // 期待値: 8
    
    // 別の関数を代入
    funcPtr = &multiply;
    
    // 形式1でmultiplyを呼び出し
    int result3 = (*funcPtr)(5, 3);
    println(result3);  // 期待値: 15
    
    // 形式2でmultiplyを呼び出し
    int result4 = funcPtr(5, 3);
    println(result4);  // 期待値: 15
}
