// 最小限のデストラクタテスト

struct Point {
    int x;
    int y;
};

impl Point {
    self() {
        self.x = 0;
        self.y = 0;
        println("Point constructor");
    }
    
    ~self() {
        println("Point destructor: x=", self.x, ", y=", self.y);
    }
}

void test_in_function() {
    Point p;
    println("Inside function: p.x=", p.x);
    // デストラクタは関数終了時に呼ばれる
}

void main() {
    println("Before function call");
    test_in_function();
    println("After function call");
}
