// 基本的なprivateメソッドテスト - 成功ケース

interface ICalculator {
    int calculate(int value);
    string getStatus();
};

impl ICalculator for int {
    // パブリックメソッド
    int calculate(int value) {
        if (self.isValid(value)) {
            return self.doCalculation(value);
        }
        return 0;
    }
    
    string getStatus() {
        return "Calculator ready";
    }
    
    // プライベートメソッド
    private bool isValid(int value) {
        return value > 0;
    }
    
    private int doCalculation(int value) {
        return value * 2;
    }
};

int main() {
    println("Private method basic test:");
    
    int number = 5;
    ICalculator calc = number;
    
    // パブリックメソッドの呼び出し - 内部でプライベートメソッドを使用
    int result1 = calc.calculate(10);
    println("calculate(10) = %d", result1);
    
    int result2 = calc.calculate(-5);
    println("calculate(-5) = %d", result2);
    
    string status = calc.getStatus();
    println("status = %s", status);
    
    println("Private method basic test passed");
    return 0;
}
