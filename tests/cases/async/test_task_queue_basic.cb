    test_init();
    test_push_single();
    test_pop_single();
    test_priority_order();
    test_multiple_tasks();
    test_pop_empty();
    test_same_priority();
    
    println("\n╔════════════════════════════════════════════════════════════╗");
    println("║  All TaskQueue tests passed! ✅                           ║");
