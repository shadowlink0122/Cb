// Struct関数戻り値のテスト
struct Point {
    int x;
    int y;
};

Point create_point(int x, int y) {
    Point p = {x: x, y: y};
    return p;
}

Point add_points(Point a, Point b) {
    Point result;
    result.x = a.x + b.x;
    result.y = a.y + b.y;
    return result;
}

int main() {
    Point p1 = create_point(3, 4);
    Point p2 = create_point(1, 2);
    
    println("Point 1: (%d, %d)", p1.x, p1.y);
    println("Point 2: (%d, %d)", p2.x, p2.y);
    
    Point sum = add_points(p1, p2);
    println("Sum: (%d, %d)", sum.x, sum.y);
    
    // 期待される出力:
    // Point 1: (3, 4)
    // Point 2: (1, 2)
    // Sum: (4, 6)
    return 0;
}
