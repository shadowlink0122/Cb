// 循環参照OK: A -> B -> A (ポインタ経由)

struct B {
    int data;
    A* member_a;  // ✅ ポインタなのでOK（前方参照）
};

struct A {
    int value;
    B* member_b;  // ✅ ポインタなのでOK
};

int main() {
    A a;
    a.value = 10;
    a.member_b = 0;
    
    B b;
    b.data = 20;
    b.member_a = &a;
    a.member_b = &b;
    
    println("a.value = ", a.value);
    println("b.data = ", b.data);
    println("a -> b -> a.value = ", a.member_b->member_a->value);
    
    assert(a.member_b->member_a->value == 10);
    println("Circular reference with pointers test passed");
    
    return 0;
}
