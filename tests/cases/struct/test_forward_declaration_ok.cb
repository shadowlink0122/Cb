// 前方宣言の統合テスト（OKケース）

// 前方宣言
struct NodeB;

// 構造体A: Bへのポインタを持つ
struct NodeA {
    int value;
    NodeB* ref_b;
};

// 構造体B: Aへのポインタを持つ（相互参照）
struct NodeB {
    int data;
    NodeA* ref_a;
};

void main() {
    NodeA a;
    NodeB b;
    
    a.value = 10;
    b.data = 20;
    
    a.ref_b = &b;
    b.ref_a = &a;
    
    // 相互参照の確認
    int val1 = (*a.ref_b).data;
    int val2 = (*b.ref_a).value;
    
    if (val1 == 20 && val2 == 10) {
        println("OK: Forward declaration test passed");
    }
}
