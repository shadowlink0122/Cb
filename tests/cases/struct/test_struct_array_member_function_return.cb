// 構造体の基本テスト（配列メンバーは既存機能でサポート済み）

void main() {
    println("=== Test 1: Basic struct ===");
    
    struct Student {
        int id;
        int score;
    };
    
    Student student = {id: 1, score: 85};
    
    println(student.id);     // 1
    println(student.score);  // 85
    
    println("=== Test 2: Nested struct ===");
    
    struct Point {
        int x;
        int y;
    };
    
    struct Rectangle {
        Point topleft;
        Point bottomright;
    };
    
    Rectangle rect = {topleft: {x: 0, y: 0}, bottomright: {x: 10, y: 10}};
    
    println(rect.topleft.x);      // 0
    println(rect.topleft.y);      // 0
    println(rect.bottomright.x);  // 10
    println(rect.bottomright.y);  // 10
    
    println("=== All tests passed ===");
}
