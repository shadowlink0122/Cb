// Struct配列メンバーのテスト
struct Student {
    string name;
    int grades[3];
    int student_id;
};

int main() {
    // 基本的な配列メンバー操作
    Student s;
    s.name = "Charlie";
    s.student_id = 12345;
    s.grades[0] = 85;
    s.grades[1] = 92;
    s.grades[2] = 78;
    
    println("Student: %s (ID: %d)", s.name, s.student_id);
    println("Grades: [%d, %d, %d]", s.grades[0], s.grades[1], s.grades[2]);
    
    int total = s.grades[0] + s.grades[1] + s.grades[2];
    int average = total / 3;
    println("Average: %d", average);
    
    // 期待される出力:
    // Student: Charlie (ID: 12345)
    // Grades: [85, 92, 78]
    // Average: 85
    return 0;
}
