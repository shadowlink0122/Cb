// Struct配列メンバーのliteral初期化のテスト
struct Course {
    string name;
    int scores[4];
    int credit;
};

int main() {
    // 配列メンバーをliteralで初期化
    Course math = {
        name: "Mathematics",
        scores: [95, 87, 92, 89],
        credit: 3
    };
    
    println("Course: %s (%d credits)", math.name, math.credit);
    println("Scores: [%d, %d, %d, %d]", 
            math.scores[0], math.scores[1], 
            math.scores[2], math.scores[3]);
    
    // 平均計算
    int sum = math.scores[0] + math.scores[1] + math.scores[2] + math.scores[3];
    int avg = sum / 4;
    println("Average score: %d", avg);
    
    // 期待される出力:
    // Course: Mathematics (3 credits)
    // Scores: [95, 87, 92, 89]
    // Average score: 90
    return 0;
}
