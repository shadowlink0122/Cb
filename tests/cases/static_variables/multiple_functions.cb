// 複数関数でのstatic変数スコープテスト
int func1(){
    static int value = 10;
    value += 5;
    return value;
}

int func2(){
    static int value = 100;
    value -= 10;
    return value;
}

int func3(){
    static int value = 1;
    value *= 2;
    return value;
}

int main(){
    // 各関数のstatic変数は独立している
    println(func1()); // 15
    println(func2()); // 90
    println(func3()); // 2
    
    println(func1()); // 20
    println(func2()); // 80
    println(func3()); // 4
    
    println(func1()); // 25
    println(func2()); // 70
    println(func3()); // 8
    
    return 0;
}
