// ポインタ演算の基本テスト
// Phase 3: ptr + n の実装テスト

int main() {
    println("=== Pointer Addition Test ===");
    
    // 配列の準備
    int[5] arr;
    arr[0] = 10;
    arr[1] = 20;
    arr[2] = 30;
    arr[3] = 40;
    arr[4] = 50;
    
    // テスト1: ptr + 1
    println("\nTest 1: ptr + 1");
    int* ptr;
    ptr = &arr[0];
    println("*ptr =", *ptr);
    
    int* ptr2;
    ptr2 = ptr + 1;
    println("*(ptr + 1) =", *ptr2);
    
    return 0;
}
