// 構造体ポインタの包括的テスト

struct Point {
    int x;
    int y;
};

int main() {
    // Test 1: 基本的な構造体ポインタ
    Point p1 = {x: 10, y: 20};
    Point* pp1 = &p1;
    println((*pp1).x);  // 10
    println((*pp1).y);  // 20
    
    // Test 2: ポインタ経由での代入
    (*pp1).x = 30;
    (*pp1).y = 40;
    println(p1.x);  // 30
    println(p1.y);  // 40
    
    // Test 3: 複数の構造体変数
    Point p2 = {x: 50, y: 60};
    Point p3 = {x: 70, y: 80};
    
    // Test 4: ポインタの再割り当て
    pp1 = &p2;
    println((*pp1).x);  // 50
    println((*pp1).y);  // 60
    
    pp1 = &p3;
    println((*pp1).x);  // 70
    println((*pp1).y);  // 80
    
    // Test 5: 別のポインタ変数
    Point* pp2 = &p1;
    println((*pp2).x);  // 30
    println((*pp2).y);  // 40
    
    return 0;
}
