// Test pointer array access for all primitive types

void test_int() {
    println("=== Int Pointer Test ===");
    int[3] arr;
    arr[0] = 10;
    arr[1] = 20;
    arr[2] = 30;
    
    int* ptr = &arr[0];
    
    println("ptr[0] = {ptr[0]}");
    println("ptr[1] = {ptr[1]}");
    println("ptr[2] = {ptr[2]}");
    
    ptr[0] = 100;
    println("After write: ptr[0] = {ptr[0]}");
    println("Original: arr[0] = {arr[0]}");
}

