// 様々な型のデフォルト引数テスト

void test_types(int n = 42, string s = "hello", bool b = true) {
    println(n);
    println(s);
    println(b);
}

int multiply(int a, int b = 2, int c = 3) {
    return a * b * c;
}

void main() {
    // すべてデフォルト
    println("--- All defaults ---");
    test_types();
    
    // 部分的にデフォルト
    println("--- Partial defaults ---");
    test_types(100);
    
    println("--- Partial defaults 2 ---");
    test_types(100, "world");
    
    // すべて指定
    println("--- All specified ---");
    test_types(200, "custom", false);
    
    // 乗算テスト
    println("--- Multiply test ---");
    println(multiply(5));        // 5 * 2 * 3 = 30
    println(multiply(5, 4));     // 5 * 4 * 3 = 60
    println(multiply(5, 4, 2));  // 5 * 4 * 2 = 40
}
