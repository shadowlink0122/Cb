// const変数をデフォルト値に使用するテスト

const int DEFAULT_WIDTH = 800;
const int DEFAULT_HEIGHT = 600;
const string DEFAULT_TITLE = "Window";

func void create_window(int w = DEFAULT_WIDTH, int h = DEFAULT_HEIGHT, string title = DEFAULT_TITLE) {
    println("Window: " + title);
    println("Size: " + w + "x" + h);
}

func int compute(int base, int multiplier = 10) {
    return base * multiplier;
}

void main() {
    println("--- Default window ---");
    create_window();
    
    println("--- Custom width ---");
    create_window(1024);
    
    println("--- Custom width and height ---");
    create_window(1024, 768);
    
    println("--- All custom ---");
    create_window(1920, 1080, "Full HD");
    
    println("--- Compute test ---");
    println(compute(5));     // 50
    println(compute(5, 20)); // 100
}
