// デフォルト引数とstruct型のテスト

struct Point {
    int x;
    int y;
};

Point create_point(int x = 10, int y = 20) {
    Point p;
    p.x = x;
    p.y = y;
    return p;
}

void print_point(Point p, string label = "Point") {
    println(label, ": (", p.x, ", ", p.y, ")");
}

void main() {
    println("--- Function returning struct with default args ---");
    Point p1 = create_point();
    print_point(p1);
    
    Point p2 = create_point(100);
    print_point(p2, "P2");
    
    Point p3 = create_point(100, 200);
    print_point(p3, "P3");
    
    println("--- Struct parameter with default label ---");
    Point p4;
    p4.x = 50;
    p4.y = 75;
    print_point(p4);
    print_point(p4, "Custom");
    
    // 計算テスト（期待値: 30, 120, 300, 125）
    println(p1.x + p1.y);  // 10 + 20 = 30
    println(p2.x + p2.y);  // 100 + 20 = 120
    println(p3.x + p3.y);  // 100 + 200 = 300
    println(p4.x + p4.y);  // 50 + 75 = 125
}
