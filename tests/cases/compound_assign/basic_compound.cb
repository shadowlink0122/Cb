// 基本的な複合代入演算子のテスト
main() {
    int a, b, c;
    
    // 加算代入
    a = 10;
    a += 5;
    println(a);  // 15
    
    // 減算代入
    b = 20;
    b -= 8;
    println(b);  // 12
    
    // 乗算代入
    c = 6;
    c *= 4;
    println(c);  // 24
    
    // 除算代入
    a = 100;
    a /= 5;
    println(a);  // 20
    
    // 剰余代入
    b = 17;
    b %= 5;
    println(b);  // 2
    
    // 単純なチェーン代入テスト
    int x, y;
    x = 5;
    y = 3;
    y *= 2;  // y = y * 2 = 6
    x += y;  // x = x + y = 5 + 6 = 11
    println(x);   // 11
    println(y);   // 6
}
