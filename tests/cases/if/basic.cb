int main() {
    int x = 0;
    if (1) x = 1;
    if (0) x = 2;
    if (1) {
        x = x + 3;
    }
    if (0) {
        x = x + 100;
    }
    
    println("If statement test:");
    println("x = %d", x);
    
    if (x == 4) {
        println("if-else test: ok");
    } else {
        println("if-else test: ng");
    }
    
    if (x == 4) println("single line if: ok2");
    else println("single line if: ng2");
    
    if (x == 0) println("if-else-if: ng3");
    else if (x == 4) println("if-else-if: ok3");
    else println("if-else-if: ng4");
    
    println("If statement test passed");
    return 0;
}
