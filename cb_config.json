{
  "language": "Cb",
  "version": "0.8.0",
  "description": "Cb programming language configuration",
  "features": {
    "char_type": true,
    "printf_formatting": true,
    "array_literals": true,
    "const_support": true,
    "debug_messages": true,
    "multilingual_errors": true,
    "interface_impl_system": true,
    "ternary_operators": true,
    "multidimensional_arrays": true
  },
  "compiler": {
    "debug_mode": false,
    "error_handling": "immediate",
    "memory_management": "raii"
  },
  "stdlib": {
    "stdio": true,
    "math": false,
    "string": false,
    "io": false
  },
  "interface_system": {
    "enabled": true,
    "supported_types": [
      "int", "long", "short", "tiny", "string", "bool", "char",
      "struct", "typedef", "array", "union"
    ],
    "features": {
      "recursive_typedef_independence": true,
      "primitive_type_impl": true,
      "error_detection": true,
      "method_resolution": true
    }
  }
}
