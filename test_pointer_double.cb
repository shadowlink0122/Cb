// ダブルポインタのテスト

int main() {
    int value = 42;
    int* ptr = &value;
    int** ptr_ptr = &ptr;
    
    println("value: %d", value);
    println("*ptr: %d", *ptr);
    println("**ptr_ptr: %d", **ptr_ptr);
    
    **ptr_ptr = 100;  // ダブルポインタ経由で値を変更
    
    println("After **ptr_ptr = 100:");
    println("value: %d", value);
    println("*ptr: %d", *ptr);
    println("**ptr_ptr: %d", **ptr_ptr);
    
    return 0;
}
