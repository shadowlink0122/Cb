    println("=============================================");
    println("     Cb言語 Bool型と論理演算子のデモ");
    println("=============================================");
    println();
    
    check_bool_type();
    check_bool();
    calc();
    test_bool_and_expr();
    
    println();
    println("=============================================");
    println("           デモ実行完了");
    println("=============================================");
    return 0;
}
