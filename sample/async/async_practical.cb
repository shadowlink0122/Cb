// メイン関数
// ============================================

void main() {
    print("==========================================\n");
    print("  Cb async/await 実用サンプル集\n");
    print("==========================================\n\n");
    
    await demo_basic_await();
    await demo_string_await();
    await demo_sequential_async();
    await demo_await_in_expression();
    await demo_conditional_async();
    await demo_error_handling();
    await demo_chained_processing();
    await demo_data_filtering();
    await demo_fibonacci();
    
    print("==========================================\n");
    print("  すべてのサンプル完了!\n");
    print("==========================================\n");
}
