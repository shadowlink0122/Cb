// 構造体配列メンバーの手動初期化テスト

struct Point {
    int x;
    int y;
};

struct Shape {
    Point[3] points;
    string name;
};

int main() {
    Shape triangle;
    triangle.name = "Triangle";
    
    // 個別に代入
    triangle.points[0].x = 0;
    triangle.points[0].y = 0;
    triangle.points[1].x = 10;
    triangle.points[1].y = 0;
    triangle.points[2].x = 5;
    triangle.points[2].y = 8;
    
    println("Shape: ", triangle.name);
    println("Point 0: (", triangle.points[0].x, ", ", triangle.points[0].y, ")");
    println("Point 1: (", triangle.points[1].x, ", ", triangle.points[1].y, ")");
    println("Point 2: (", triangle.points[2].x, ", ", triangle.points[2].y, ")");
    
    return 0;
}
