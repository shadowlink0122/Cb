// 構造体配列メンバーのテストまとめ

struct Point {
    int x;
    int y;
};

struct Shape {
    Point[3] points;
    string name;
};

int main() {
    println("=== Test 1: Struct Literal Initialization ===");
    Shape triangle = {[{0, 0}, {10, 0}, {5, 8}], "Triangle"};
    println("Triangle: %s", triangle.name);
    println("Point 0: (%d, %d)", triangle.points[0].x, triangle.points[0].y);
    println("Point 1: (%d, %d)", triangle.points[1].x, triangle.points[1].y);
    println("Point 2: (%d, %d)", triangle.points[2].x, triangle.points[2].y);
    
    println("\n=== Test 2: Individual Assignment ===");
    Shape square;
    square.name = "Square";
    square.points[0].x = 0;
    square.points[0].y = 0;
    square.points[1].x = 10;
    square.points[1].y = 0;
    square.points[2].x = 10;
    square.points[2].y = 10;
    println("Square: %s", square.name);
    println("Point 0: (%d, %d)", square.points[0].x, square.points[0].y);
    println("Point 1: (%d, %d)", square.points[1].x, square.points[1].y);
    println("Point 2: (%d, %d)", square.points[2].x, square.points[2].y);
    
    return 0;
}
